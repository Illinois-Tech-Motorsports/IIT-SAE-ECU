{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VS setup",
            "detail": "Setup VScode configuation",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "py",
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "label": "$(tools)",
                    "color": "#1f26f0"
                }
            },
            "args": [
                "vs_conf.py"
            ],
            "presentation": {
                "panel": "shared"
            }
        },
        {
            "label": "Build",
            "type": "process",
            "detail": "Compile project",
            "presentation": {
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "build",
                "${config:CMAKE_FINAL_VARS}"
            ],
            "options": {
                "statusbar": {
                    "label": "$(file-binary)",
                    "color": "#1ba82e"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    "regexp": "Pre_Build\/(.*?):(\\d+):(\\d*):?\\s+(?:fatal\\s+)?(note|warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Configure",
            "type": "process",
            "detail": "Configure the CMake project",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "config",
                "${config:CMAKE_FINAL_VARS}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Reset",
            "type": "process",
            "detail": "Clean up entire CMake project",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "reset",
                "${config:CMAKE_FINAL_VARS}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Front",
            "type": "process",
            "detail": "Upload compiled binary to front teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "reveal": "silent"
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "upload",
                "${config:FRONT_TEENSY_PORT}",
                "${workspaceFolder}/build/bin/Teensy${config:CORE_MODEL}_Front.hex"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Back",
            "type": "process",
            "detail": "Upload compiled binary to back teensy",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "reveal": "silent"
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "upload",
                "${config:BACK_TEENSY_PORT}",
                "${workspaceFolder}/build/bin/Teensy${config:CORE_MODEL}_Back.hex"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Upload Both",
            "detail": "Upload compiled binary to both teensies",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Upload Front",
                "Upload Back"
            ],
            "options": {
                "statusbar": {
                    "label": "$(circuit-board)",
                    "color": "#e6d925"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Disable Front",
            "type": "process",
            "detail": "Put front teensy in programming mode",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "reveal": "silent"
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "disable",
                "${config:FRONT_TEENSY_PORT}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Disable Back",
            "type": "process",
            "detail": "Put back teensy in programming mode",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "reveal": "silent"
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "disable",
                "${config:BACK_TEENSY_PORT}"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Disable Both",
            "detail": "Put both teensies in programming mode",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Disable Back",
                "Disable Front"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Shebang Front",
            "detail": "Run all tasks required to program front teensy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Upload Front",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Shebang Back",
            "detail": "Run all tasks required to program back teensy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Upload Back",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Shebang Both",
            "detail": "Run all tasks required to program both teensies",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Disable Both",
                "Build",
                "Upload Back",
                "Upload Front",
                "Monitor"
            ],
            "options": {
                "statusbar": {
                    "label": "$(rocket)",
                    "color": "#e67c25"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "process",
            "detail": "Clean up build files",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "python",
                {
                    "quoting": "weak",
                    "value": "${workspaceFolder}/${config:TOOLCHAIN_OFFSET}/tools/config.py"
                },
                "clean"
            ],
            "options": {
                "statusbar": {
                    "label": "$(refresh)",
                    "color": "#e62525"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Monitor",
            "type": "shell",
            "detail": "Monitor ecu over a CLI",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\${config:TOOLCHAIN_OFFSET}\\tools\\ComMonitor.exe",
                "${input:TEENSY_USB_PORTNAME}",
                "${config:BAUDRATE}",
                "-t${input:TEENSY_COM_TYPE}",
                "-m8",
                "--jsonPath",
                "${workspaceFolder}\\log_lookup.json",
                "-r",
                "${config:GRAPH_ARG}",
                "-w",
                "${config:LOGGING_OPTION}",
                "--logTime",
                "--input",
                "A" // "D"
            ],
            "options": {
                "statusbar": {
                    "label": "$(terminal)",
                    "color": "#000000"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "External Split Monitor",
            "type": "shell",
            "detail": "Monitor both ECUs over an external CLI",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\comBoth.bat",
                "${config:FRONT_TEENSY_PORT}",
                "${config:BACK_TEENSY_PORT}",
                "${config:BAUDRATE}",
                "${input:TEENSY_COM_TYPE}",
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Monitor Raw",
            "type": "shell",
            "detail": "Monitor teensy hex values over a CLI",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "cmd.exe",
            "args": [
                "/d",
                "/c",
                "${workspaceFolder}\\${config:TOOLCHAIN_OFFSET}\\tools\\ComMonitor.exe",
                "${input:TEENSY_USB_PORTNAME}",
                "${config:BAUDRATE}",
                "-tH",
                "-m8",
                "-r",
                "-w",
            ],
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Pull Submodules",
            "detail": "Setup VScode configuation",
            "type": "shell",
            "command": "git",
            "windows": {
                "command": "git",
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true
                }
            },
            "args": [
                "pull",
                "--recurse-submodules"
            ],
            "presentation": {
                "panel": "shared"
            }
        },
        {
            "label": "Pastebin",
            "type": "shell",
            "detail": "Push lookup table to pastebin",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "python",
            "args": [
                "uploadPaste.py",
            ],
            "options": {
                "statusbar": {
                    "label": "$(cloud-upload)"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "QRGif",
            "type": "shell",
            "detail": "Create a QRGif of lookup table",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false
            },
            "command": "python",
            "args": [
                "qrJSON.py",
            ],
            "options": {
                "statusbar": {
                    "label": "$(symbol-numeric)"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "ZZZZ",
            "detail": "Don't run this, this is run on startup",
            "type": "shell",
            "command": "python3",
            "windows": {
                "command": "py",
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide": true
                }
            },
            "args": [
                "vs_conf.py",
                "thisisbeingrunonstartup"
            ],
            // "dependsOn": [
            //     "Pull Submodules"
            // ],
            "presentation": {
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
    ],
    "inputs": [
        {
            "id": "TEENSY_COM_TYPE",
            "description": "What type of data the monitor should expect",
            "type": "pickString",
            "options": [
                "Ascii",
                "Hex",
                "Decimal",
                "Binary",
                "Mapped",
            ],
            "default": "Mapped"
        },
        {
            "id": "TEENSY_USB_PORTNAME",
            "description": "What portname should be use",
            "type": "pickString",
            "options": [
                {
                    "label": "Front Teensy",
                    "value": "${config:FRONT_TEENSY_PORT}"
                },
                {
                    "label": "Back Teensy",
                    "value": "${config:BACK_TEENSY_PORT}"
                }
            ],
            "default": "${config:FRONT_TEENSY_PORT}"
        }
    ]
}